<body class="bg-dark">
  <div class="container">
    <div class="card card-login mx-auto mt-5">
      <div class="card-header">Details</div>
        <div class="card-body">
          <%= form_for(@stock) do |f| %>
            <% if @stock.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@stock.errors.count, "error") %> prohibited this portfolio from being saved:</h2>
                <ul>
                  <% @stock.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

              <div class="form-group">
                <%= f.text_field :symbol, autofocus: true, class: 'form-control', placeholder: "Enter a ticker" %>
              </div>
              <div class="form-group">
                <%= f.text_field :sector, autofocus: true, class: 'form-control', placeholder: "Enter Market Sector" %>
              </div>
              <div class="form-group">
                <%= f.number_field :high, autofocus: true, class: 'form-control', placeholder: "Enter a high price" %>
              </div>
              <div class="form-group">
                <%= f.number_field :low, autofocus: true, class: 'form-control', placeholder: "Enter a low price" %>
              </div>
              <div class="form-group">
                <%= f.number_field :price, autofocus: true, class: 'form-control', placeholder: "Enter the current price" %>
              </div>
              <div class="actions">
                <%= f.submit "Create Portfolio", class: 'btn btn-primary btn-block' %>
              </div>
          <% end %>
        </div>
    </div>
  </div>
</body>
