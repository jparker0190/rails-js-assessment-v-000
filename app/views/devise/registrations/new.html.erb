<body class="bg-dark">
  <div class="container">
    <div class="card card-login mx-auto mt-5">
      <div class="card-header">Sign up</div>
        <div class="card-body">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">

              <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: "Enter your name" %>
            </div>

            <div class="form-group">

              <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Enter your email address" %>
            </div>

            <div class="form-group">


              <%= f.password_field :password, class: 'form-control', placeholder: "Enter a password" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
            </div>

            <div class="form-group">

              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Please re-type password"%>
            </div>

            <div class="actions">
              <%= f.submit "Sign Up", class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</body>
